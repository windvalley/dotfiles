# ============================================
# 自定义着色器 (Custom Shaders)
# ============================================

# custom-shader
# 自定义 GLSL 着色器文件路径
#
# 支持 Shadertoy 风格的 mainImage 函数
# 可用 uniform:
#   - sampler2D iChannel0        - 输入纹理（终端屏幕）
#   - vec3 iResolution           - 输出尺寸
#   - float iTime                - 时间（秒）
#   - float iTimeDelta           - 帧间隔时间
#   - int iFrame                 - 帧数
#   - vec4 iCurrentCursor        - 当前光标信息 (x, y, visible, style)
#   - vec4 iPreviousCursor       - 上一帧光标信息
#   - vec4 iCurrentCursorColor   - 光标颜色
#   - float iTimeCursorChange    - 光标变化时间戳
#   - float iTimeFocus           - 表面最后获得焦点的时间戳
#   - int iFocus                 - 当前焦点状态 (1.0=聚焦, 0.0=未聚焦)
#   - vec3 iPalette[256]         - 256色终端调色板 (RGB [0.0, 1.0])
#   - vec3 iBackgroundColor      - 终端背景色 (RGB)
#   - vec3 iForegroundColor      - 终端前景色 (RGB)
#   - vec3 iCursorColor          - 终端光标色 (RGB)
#   - vec3 iCursorText           - 终端光标文字色 (RGB)
#   - vec3 iSelectionBackgroundColor - 选择背景色 (RGB)
#   - vec3 iSelectionForegroundColor - 选择前景色 (RGB)
#
# 默认值: 空
#
# 警告: 无效着色器可能导致窗口黑屏
#
# 配置示例:
#   custom-shader = /path/to/shader.glsl
#   # 可指定多个，按顺序执行
#   custom-shader = /path/to/shader1.glsl
#   custom-shader = /path/to/shader2.glsl
custom-shader =

# custom-shader-animation
# 自定义着色器动画模式
#
# 可选值:
#   - true                       - 聚焦时运行动画循环
#   - false                      - 仅在终端更新时渲染
#   - always                     - 始终运行动画循环（CPU 占用更高）
#
# 默认值: true
custom-shader-animation = true

# ============================================
# 铃声 (Bell)
# ============================================

# bell-features
# 铃声特性
#
# 可选值（逗号分隔）:
#   - system                     - 使用系统通知（仅 GTK）
#   - no-system                  - 禁用系统通知
#   - audio                      - 播放自定义声音（仅 GTK）
#   - no-audio                   - 禁用自定义声音
#   - attention                  - 请求用户注意（默认启用）
#   - no-attention               - 禁用注意力请求
#   - title                      - 在标题前添加铃铛 emoji（默认启用）
#   - no-title                   - 禁用标题铃铛
#   - border                     - 显示边框（仅 GTK）
#   - no-border                  - 禁用边框
#
# 默认值: no-system,no-audio,attention,title,no-border
bell-features = no-system,no-audio,attention,title,no-border

# bell-audio-path
# 自定义铃声音频文件路径（仅 GTK）
#
# 支持格式取决于系统
# 路径可以是相对配置文件的
#
# 默认值: 空
bell-audio-path =

# bell-audio-volume
# 铃声音量（仅 GTK）
#
# 可选值: 0.0 - 1.0
# 默认值: 0.5
bell-audio-volume = 0.5

# ============================================
# 应用配置 (Application Configuration)
# ============================================

# config-file
# 包含额外的配置文件
#
# 可选值: 文件路径
#   - ?前缀                      - 文件不存在时不报错
#   - "路径"                     - 如果路径以 ? 开头需要用引号
#
# 默认值: 空
#
# 配置示例:
#   config-file = ~/.config/ghostty/themes/my-theme.conf
#   config-file = ?optional.conf  # 不存在也不报错
config-file =

# config-default-files
# 加载默认配置文件路径
#
# 可选值: true | false
#   - true                       - 加载 $XDG_CONFIG_HOME/ghostty/config
#   - false                      - 不加载默认配置
#
# 默认值: true
#
# 注意: 仅在命令行参数中设置有效
config-default-files = true

# confirm-close-surface
# 关闭表面前是否确认
#
# 可选值:
#   - true                       - 如果 shell 集成报告有进程运行则确认
#   - false                      - 不确认直接关闭
#   - always                     - 始终确认（即使有 shell 集成）
#
# 默认值: true
confirm-close-surface = false

# quit-after-last-window-closed
# 最后一个窗口关闭后退出应用
#
# 可选值: true | false
#   - true                       - 最后一个窗口关闭后退出（Linux 默认）
#   - false                      - 保持运行（macOS 默认）
#
# 默认值: false（macOS），true（Linux）
# NOTE: 如果不设置为 true，会导致偶尔重新启动 ghostty 时不自动执行 initial-command 命令
quit-after-last-window-closed = true

# quit-after-last-window-closed-delay
# 最后一个窗口关闭后延迟退出
#
# 格式: 数字+单位（同 resize-overlay-duration）
# 最小值: 1s
# 默认值: 空（立即退出）
#
# 配置示例:
#   quit-after-last-window-closed-delay = 30s
quit-after-last-window-closed-delay =

# initial-window
# 启动时是否创建初始窗口
#
# 可选值: true | false
# 默认值: true
initial-window = true

# undo-timeout
# 撤销操作的超时时间（仅 macOS）
#
# 格式: 数字+单位（同 resize-overlay-duration）
# 0 表示禁用撤销
#
# 默认值: 5s
undo-timeout = 5s

# ============================================
# 图像存储 (Image Storage)
# ============================================

# image-storage-limit
# 每个终端屏幕的图像存储限制（字节）
#
# 可选值: 0 - 4294967295（4GiB）
#   - 0                          - 禁用所有图像协议
#
# 默认值: 320000000（约 320MB）
image-storage-limit = 320000000

# ============================================
# 颜色报告 (Color Reporting)
# ============================================

# osc-color-report-format
# OSC 颜色查询报告格式
#
# 可选值:
#   - none                       - 不回复查询
#   - 8-bit                      - 返回 8 位颜色值（rr/gg/bb）
#   - 16-bit                     - 返回 16 位颜色值（rrrr/gggg/bbbb）
#
# 默认值: 16-bit
osc-color-report-format = 16-bit

# ============================================
# 标题报告 (Title Reporting)
# ============================================

# title-report
# 启用标题报告（CSI 21 t）
#
# 可选值: true | false
#   - true                       - 允许程序查询标题
#   - false                      - 禁用（默认，安全原因）
#
# 警告: 这可能暴露敏感信息或被用于代码执行攻击
# 默认值: false
title-report = false

# ============================================
# VT 模式 (VT Modes)
# ============================================

# vt-kam-allowed
# 允许 KAM 模式（键盘锁定模式）
#
# 可选值: true | false
# 默认值: false
#
# 警告: 除非你明确知道需要 KAM，否则不要启用
vt-kam-allowed = false

# ============================================
# 终端特性 (Terminal Features)
# ============================================

# term
# 设置 TERM 环境变量
#
# 可选值: 任意 terminfo 名称
# 默认值: xterm-ghostty
term = xterm-ghostty

# enquiry-response
# ENQ (0x05) 查询的响应字符串
#
# 默认值: 空
enquiry-response =

# bold-color
# 粗体文字颜色
#
# 可选值:
#   - #RRGGBB 或 X11 颜色名称   - 固定颜色
#   - bright                     - 使用调色板中的亮色
#
# 默认值: 空
bold-color =

# faint-opacity
#  faint（暗淡）文字的不透明度
#
# 可选值: 0.0 - 1.0
# 默认值: 0.5
faint-opacity = 0.5

# ============================================
# 异步后端 (Async Backend)
# ============================================

# async-backend
# 异步 I/O 后端（仅 Linux）
#
# 可选值:
#   - auto                       - 自动选择
#   - epoll                      - 使用 epoll API
#   - io_uring                   - 使用 io_uring API
#
# 默认值: auto
#
# 注意: 更改后需要完全重启应用
async-backend = auto

# ============================================
# 自动更新 (Auto Update)
# ============================================

# auto-update
# 自动更新设置（仅 macOS）
#
# 可选值:
#   - off                        - 禁用自动更新
#   - check                      - 检查并通知，但不自动下载
#   - download                   - 自动下载但不安装
#   - 空                         - 使用 Sparkle 默认设置
#
# 默认值: 空
auto-update = download

# auto-update-channel
# 自动更新频道
#
# 可选值:
#   - stable                     - 稳定版
#   - tip                        - 预发布版（每日构建）
#   - 空                         - 匹配当前版本类型
#
# 默认值: 空
#
# 注意: 更改后需要完全重启应用
auto-update-channel =

# ============================================
# 应用通知 (App Notifications)
# ============================================

# app-notifications
# 应用内通知设置（仅 GTK）
#
# 可选值（逗号分隔）:
#   - clipboard-copy             - 复制到剪贴板时通知
#   - no-clipboard-copy          - 禁用复制通知
#   - config-reload              - 配置重载时通知
#   - no-config-reload           - 禁用重载通知
#   - true                       - 启用所有通知
#   - false                      - 禁用所有通知
#
# 默认值: clipboard-copy,config-reload
app-notifications = clipboard-copy,config-reload

# ============================================
# macOS 特定配置 (macOS-specific)
# ============================================

# macos-non-native-fullscreen
# 非原生全屏模式
#
# 可选值:
#   - true                       - 快速全屏，无动画，不使用新 Space
#   - false                      - 原生 macOS 全屏（默认）
#   - visible-menu               - 非原生全屏但显示菜单栏
#   - padded-notch               - 非原生全屏但避开刘海区域
#
# 默认值: false
#
# 警告: 此模式下标签页不工作！
#
# 配置示例:
#   # 如果你不使用标签页，想要更快的全屏体验
#   macos-non-native-fullscreen = true
macos-non-native-fullscreen = false

# macos-window-buttons
# 窗口按钮可见性
#
# 可选值:
#   - visible                    - 显示关闭/最小化/最大化按钮
#   - hidden                     - 隐藏
#
# 默认值: visible
macos-window-buttons = hidden

# macos-titlebar-style
# 标题栏样式
#
# 可选值:
#   - native                     - 原生 macOS 标题栏
#   - transparent                - 透明标题栏（默认）
#   - tabs                       - 集成标签页到标题栏
#   - hidden                     - 完全隐藏标题栏
#
# 默认值: transparent
macos-titlebar-style = transparent

# macos-titlebar-proxy-icon
# 代理图标可见性（仅原生标题栏）
#
# 可选值:
#   - visible                    - 显示工作目录图标
#   - hidden                     - 隐藏
#
# 默认值: visible
macos-titlebar-proxy-icon = visible

# macos-dock-drop-behavior
# 拖放文件到 Dock 图标的行为
#
# 可选值:
#   - new-tab                    - 在新标签页打开
#   - window                     - 在新窗口打开
#
# 默认值: new-tab
macos-dock-drop-behavior = new-tab

# macos-option-as-alt
# 将 Option 键视为 Alt 键
#
# 可选值:
#   - true                       - Option 作为 Alt
#   - false                      - 保持 Option 的 Unicode 输入功能
#   - left                       - 仅左 Option 作为 Alt
#   - right                      - 仅右 Option 作为 Alt
#   - 空                         - 根据键盘布局自动（US 布局默认为 true）
#
# 默认值: 空
#
# 配置示例:
#   # 如果你需要 Alt 键组合在 Vim 中工作
#   macos-option-as-alt = true
macos-option-as-alt =

# macos-window-shadow
# 窗口阴影
#
# 可选值: true | false
# 默认值: true
macos-window-shadow = true

# macos-hidden
# 隐藏 Dock 和应用切换器中的图标
#
# 可选值:
#   - never                      - 从不隐藏（默认）
#   - always                     - 始终隐藏
#
# 默认值: never
#
# 警告: 隐藏后键盘布局切换将不再自动
macos-hidden = never

# macos-auto-secure-input
# 检测到密码提示时自动启用安全输入
#
# 可选值: true | false
# 默认值: true
macos-auto-secure-input = true

# macos-secure-input-indication
# 显示安全输入状态的视觉指示
#
# 可选值: true | false
# 默认值: true
macos-secure-input-indication = true

# macos-icon
# Dock 图标样式
#
# 可选值:
#   - official                   - 官方图标
#   - blueprint                  - 蓝图风格
#   - chalkboard                 - 黑板风格
#   - microchip                  - 微芯片风格
#   - glass                      - 玻璃风格
#   - holographic                - 全息风格
#   - paper                      - 纸张风格
#   - retro                      - 复古风格
#   - xray                       - X 光风格
#   - custom                     - 自定义图标（需设置 macos-custom-icon）
#   - custom-style               - 自定义样式（需设置 macos-icon-*）
#
# 默认值: official
macos-icon = official

# macos-custom-icon
# 自定义图标路径（当 macos-icon = custom 时）
#
# 可选值: PNG/JPEG/ICNS 文件的绝对路径
# 默认值: ~/.config/ghostty/Ghostty.icns
macos-custom-icon =

# macos-icon-frame
# 图标边框材质（当 macos-icon = custom-style 时）
#
# 可选值:
#   - aluminum                   - 拉丝铝（默认）
#   - beige                      - 90年代米色
#   - plastic                    - 光泽塑料
#   - chrome                     - 镀铬
#
# 默认值: aluminum
macos-icon-frame = aluminum

# macos-icon-ghost-color
# 图标中幽灵的颜色（当 macos-icon = custom-style 时）
#
# 可选值: #RRGGBB 或 X11 颜色名称
# 默认值: 空
macos-icon-ghost-color =

# macos-icon-screen-color
# 图标中屏幕的颜色（渐变，支持最多64种颜色）
#
# 格式: color1,color2,color3,...（从下到上）
# 可选值: #RRGGBB 或 X11 颜色名称
# 默认值: 空
macos-icon-screen-color =

# macos-shortcuts
# 允许 macOS Shortcuts 控制 Ghostty
#
# 可选值:
#   - ask                        - 询问用户权限（默认）
#   - allow                      - 允许
#   - deny                       - 拒绝
#
# 默认值: ask
macos-shortcuts = ask

# ============================================
# Linux/GTK 特定配置 (Linux/GTK-specific)
# ============================================

# linux-cgroup
# Linux cgroup 隔离
#
# 可选值:
#   - never                      - 从不使用 cgroup（默认）
#   - always                     - 始终使用
#   - single-instance            - 仅在单实例模式下使用
#
# 默认值: never
#
# 注意: 需要 systemd
linux-cgroup = never

# linux-cgroup-memory-limit
# 单个终端进程的内存限制（字节）
#
# 可选值: 字节数
# 默认值: 空（无限制）
linux-cgroup-memory-limit =

# linux-cgroup-processes-limit
# 单个终端进程的进程数限制
#
# 可选值: 进程数
# 默认值: 空（无限制）
linux-cgroup-processes-limit =

# linux-cgroup-hard-fail
# cgroup 初始化失败时是否报错
#
# 可选值: true | false
#   - true                       - 失败时退出
#   - false                      - 失败时忽略（默认）
#
# 默认值: false
linux-cgroup-hard-fail = false

# gtk-opengl-debug
# 启用 GTK OpenGL 调试日志
#
# 可选值: true | false
# 默认值: false（发布版）/ true（调试版）
gtk-opengl-debug = false

# gtk-single-instance
# GTK 单实例模式
#
# 可选值:
#   - true                       - 单实例，新进程打开新窗口
#   - false                      - 每个进程独立
#   - detect                     - 自动检测（默认）
#
# 默认值: detect
#
# 自动检测逻辑:
#   - 如果 TERM_PROGRAM 设置，禁用单实例
#   - 如果有 CLI 参数，禁用单实例
gtk-single-instance = detect

# gtk-titlebar
# 显示 GTK 标题栏
#
# 可选值: true | false
# 默认值: true
gtk-titlebar = true

# gtk-tabs-location
# 标签页位置
#
# 可选值:
#   - top                        - 顶部（默认）
#   - bottom                     - 底部
#   - hidden                     - 隐藏（显示标签概览按钮）
#
# 默认值: top
gtk-tabs-location = top

# gtk-titlebar-hide-when-maximized
# 最大化时隐藏标题栏
#
# 可选值: true | false
# 默认值: false
gtk-titlebar-hide-when-maximized = false

# gtk-toolbar-style
# 工具栏样式
#
# 可选值:
#   - flat                       - 扁平
#   - raised                     - 凸起带阴影（默认）
#   - raised-border              - 凸起带边框
#
# 默认值: raised
gtk-toolbar-style = raised

# gtk-titlebar-style
# 标题栏样式
#
# 可选值:
#   - native                     - 传统标题栏（默认）
#   - tabs                       - 标题栏和标签栏合并
#
# 默认值: native
#
# 注意: 当 `window-decoration` 为 `none` 或在 macOS 上运行时此选项无效。
gtk-titlebar-style = native

# gtk-wide-tabs
# 宽标签页（填充可用空间）
#
# 可选值: true | false
# 默认值: true
gtk-wide-tabs = true

# gtk-custom-css
# 自定义 GTK CSS 文件
#
# 可选值: CSS 文件路径（可用 ? 前缀忽略错误）
# 文件大小限制: 5MiB
# 默认值: 空
#
# 配置示例:
#   gtk-custom-css = ~/.config/ghostty/custom.css
#
#   # custom.css 示例:
#   # .terminal-window { border-radius: 8px; }
gtk-custom-css =

# desktop-notifications
# 允许终端应用显示桌面通知（OSC 9 / OSC 777）
#
# 可选值: true | false
# 默认值: true
desktop-notifications = true
